{
  "name": "tiva",
  "version": "0.2.0",
  "description": "Expensive plain object type validator leverages TypeScript language service.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/makeflow/tiva.git"
  },
  "scripts": {
    "build": "tsc --build",
    "lint-prettier": "prettier --with-node-modules --check \"**/*.{ts,tsx,js,jsx,json,yml,md}\"",
    "lint-ts": "eslint \"src/**/*.ts\"",
    "lint": "yarn lint-prettier && yarn lint-ts",
    "test": "rimraf bld && yarn build && yarn lint && yarn jest",
    "report-coverage": "cat coverage/lcov.info | coveralls"
  },
  "main": "bld/library/index.js",
  "types": "bld/library/index.d.ts",
  "files": [
    "src/library/**/*.ts",
    "bld/library",
    "!*.tsbuildinfo"
  ],
  "devDependencies": {
    "@magicspace/configs": "^0.2.2",
    "@magicspace/eslint-plugin": "^0.1.4",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.3",
    "@types/validator": "^10.11.3",
    "coveralls": "^3.0.7",
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "typescript": ">=3.8.0"
  },
  "dependencies": {
    "extendable-error": "^0.1.7",
    "tslang": "^0.1.18",
    "tslib": "^1.10.0",
    "tsutils": "^3.17.1",
    "validator": "^12.0.0"
  }
}
